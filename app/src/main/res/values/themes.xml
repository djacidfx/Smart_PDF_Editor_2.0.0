<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PDFReader" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:listDivider">@color/opposite_theme</item>

        <item name="android:colorControlActivated">@color/appColor</item>
        <item name="android:textColor">@color/opposite_theme</item>
        <item name="android:textColorAlertDialogListItem">@color/opposite_theme</item>
        <item name="android:editTextColor">@color/opposite_theme</item>
        <item name="android:textColorSecondary">@color/opposite_theme</item>
        <item name="preferenceTheme">@style/SettingsFragmentStyle</item>
        <item name="alertDialogTheme">@style/DialogTheme</item>
        <item name="popupMenuStyle">@style/popupMenuStyle</item>
        <item name="android:actionMenuTextColor">@color/opposite_theme</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorSecondary">@color/opposite_theme</item>
        <item name="textColorAlertDialogListItem">@color/opposite_theme</item>

    </style>


    <style name="SettingsFragmentStyle" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:textColorPrimary">@color/opposite_theme</item>
        <item name="android:textColorSecondary">@color/opposite_theme</item>
        <item name="android:textColorTertiary">@color/appColor</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="popupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:itemBackground">@color/whiteNew</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryDark</item>
    </style>

    <style name="LibAppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="toolbarStyle">@style/ToolbarTheme</item>
        <item name="tabStyle">@style/PickerTabLayout</item>
    </style>
    <style name="FilePickerTheme" parent="LibAppTheme.Dark">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="tabStyle">@style/PickerTabLayout</item>
    </style>

    <style name="PickerTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <!--        tab background-->
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
        <!--        tab text color selector : set selector accordingly to dark or light theme-->
        <item name="tabTextColor">@color/white</item>
        <!--        tab indicator color: set indicator color accordingly-->
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>

        <item name="tabMaxWidth">0dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>


    <style name="AppThemeWhite" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground_light</item>
        <item name="titleToolbarTextColor">@color/mb_white</item>
        <item name="iconTintOnCard">@color/colorPrimary</item>
        <item name="historyIconColor">@color/colorPrimary</item>
        <item name="customDividerColor">@color/black</item>
        <item name="navigationIconTint">@color/colorGray</item>
        <item name="bottomSheetColor">?attr/colorPrimary</item>
        <item name="bottomSheetTextColor">@color/mb_white</item>
        <item name="bannerBackgroundColor">@color/colorAccent</item>
        <item name="similarBgColor">@color/mb_white</item>
        <item name="bottomSheetBgColor">@color/windowBackground_light</item>
        <item name="lockIconTintColor">@color/black</item>
        <item name="actionMenuTextColor">@color/mb_white</item>
        <item name="android:actionMenuTextColor">@color/mb_white</item>
        <item name="android:scrollbarThumbVertical">@android:color/transparent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorBlackAlt</item>
        <item name="materialCardViewStyle">@style/MaterialCardviewStyleLight</item>
    </style>

    <style name="AppThemeBlack" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@color/colorBackground_black</item>
        <item name="historyIconColor">@color/colorGray</item>
        <item name="iconTintOnCard">@color/mb_white</item>
        <item name="customDividerColor">@color/windowBackground_dark</item>
        <item name="navigationIconTint">@color/colorGray</item>
        <item name="bottomSheetColor">@color/mb_white</item>
        <item name="bottomSheetTextColor">@color/black</item>
        <item name="bannerBackgroundColor">@color/windowBackground_dark</item>
        <item name="similarBgColor">@color/black</item>
        <item name="bottomSheetBgColor">@color/colorBackground_black</item>
        <item name="lockIconTintColor">@color/mb_white</item>
        <item name="actionMenuTextColor">@color/mb_white</item>
        <item name="android:actionMenuTextColor">@color/mb_white</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="materialCardViewStyle">@style/MaterialCardviewStyleBlack</item>
    </style>

    <style name="ActivityThemeDark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorBlackAlt</item>
        <item name="android:windowBackground">@color/windowBackground_dark</item>
        <item name="titleToolbarTextColor">@color/mb_white</item>
        <item name="iconTintOnCard">@color/white</item>
        <item name="historyIconColor">@color/black</item>
        <item name="customDividerColor">@color/black</item>
        <item name="navigationIconTint">@color/colorGray</item>
        <item name="bottomSheetColor">?attr/colorPrimary</item>
        <item name="bottomSheetTextColor">@color/mb_white</item>
