        <item name="bottomSheetBgColor">@color/windowBackground_dark</item>
        <item name="lockIconTintColor">@color/mb_white</item>
        <item name="actionMenuTextColor">@color/mb_white</item>
        <item name="android:actionMenuTextColor">@color/mb_white</item>
        <item name="android:statusBarColor">@color/colorBlackAlt</item>
        <item name="android:textColor">@color/white</item>
        <item name="materialCardViewStyle">@style/MaterialCardviewStyleDark</item>
    </style>

    <style name="MaterialCardviewStyleDark" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorBlackAltLight</item>
    </style>
    <style name="MaterialCardviewStyleBlack" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/black</item>
    </style>
    <style name="MaterialCardviewStyleLight" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="styleTextInputEditText" parent="Base.Widget.MaterialComponents.TextInputEditText">
